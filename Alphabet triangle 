#include <stdio.h>

int main()
{ int r;
    printf("Enter no. of rows:");
    scanf("%d",&r);
    for(int i=1;i<=r;i++){
        int a=i-1;
    for(int q=1;q<=r-i;q++){
      printf(" ");
     }
     for(int j=1;j<=i;j++){
         char ch=(char)(j+64);
      printf("%c",ch);
     }
     for(int k=1;k<=i-1;k++){
         char ch=(char)(a+64);
         printf("%c",ch);
         a--;
     }
     printf("\n");
    }
    return 0;
}
