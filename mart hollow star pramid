#include <stdio.h>

int main()
{ int r;
    printf("Enter the no. of rows:");
    scanf("%d",&r);
  int nst=r;
  int nsp=1;
  for(int i=1;i<=r*2+1;i++){
      printf("*");
  }
  printf("\n");
    for(int i=1;i<=r;i++){
    for(int j=1;j<=nst;j++){
     printf("*");}
    for(int k=1;k<=nsp;k++){
       printf(" ");
    }
    for(int j=1;j<=nst;j++){
     printf("*");}
     nst--;
    nsp+=2;
   printf("\n");}

    return 0;
}