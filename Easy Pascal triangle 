#include<stdio.h>
int main()
{ int n;
   
    printf("Enter the two no.");
    scanf("%d",&n);
    
    for(int i=0;i<=n;i++){
        int nsp=n-i;
        for(int k=1;k<=nsp;k++){
           printf(" ");
        }
       int frist=1; 
       for(int j=0;j<=i;j++){
    printf("%d ",frist);
    frist =frist*(i-j)/(j+1);
      }
      printf("\n");
    }
    
    return 0;
}