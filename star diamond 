#include <stdio.h>

int main()
{ int r;
    printf("Enter no. of rows:");
    scanf("%d",&r);
    int nst=1;
    int nsp=r/2+1;
    int ml=r/2+1;
    for(int i=1;i<=r;i++){
    for(int q=1;q<=nsp;q++){
      printf(" ");
     }
     for(int j=1;j<=nst;j++){
      printf("*");
     }
     if(i<ml){
      nsp--;
      nst+=2;
     }
     else{
     nsp++;
     nst-=2;
     }
     printf("\n");
    }
    return 0;
}
