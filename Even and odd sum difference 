#include <stdio.h>

int main()
{ int arry[7]={1,2,3,4,5,6,7,};
int evensum=0;
int oddsum=0;
  for(int i=0;i<=6;i++){
    if(i%2==0) {
      evensum+=arry[i];
    }
    else{
     oddsum+=arry[i];
    }
    
  }
 int result=evensum-oddsum;
    printf("The difference between evensum and oddsum ;%d",result);

    return 0;
}